  <script>
    const nomes = [
      "ClÃ¡udio", "AndrÃ©", "Alice", "Sarah", "Alisson",
      "Renata", "Rouvane", "Bruno", "Deiliane", "Matheus",
      "Rosiane", "NatÃ¡lia"
    ];

    let sorteados = [];

    function embaralhar(lista) {
      return lista.sort(() => Math.random() - 0.5);
    }

    function sortear() {
      if (sorteados.length === 0) {
        sorteados = embaralhar([...nomes]);
      }

      if (sorteados.length >= 2) {
        const amigo1 = sorteados.pop();
        const amigo2 = sorteados[0]; // nÃ£o pode tirar a si mesmo
        document.getElementById("resultado").textContent =
          `${amigo1} tirou ${amigo2}! ğŸ‰`;
      } else {
        document.getElementById("resultado").textContent =
          "Todos jÃ¡ sortearam! Reinicie a pÃ¡gina para comeÃ§ar novamente ğŸ„";
      }
    }
